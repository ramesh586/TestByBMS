<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarTabBarStyle">@style/actionBarStyles</item>
        <item name="actionBarTabStyle">@style/actionBarTabViewStyle</item>
    </style>
    <style name="actionBarStyles" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="android:showDividers">none</item>
        <item name="android:weightSum">3</item>

    </style>
    
    <style name="actionBarTabViewStyle" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:layout_weight">1</item>
    </style>
     <style name="custom_ratingbar" parent="@android:style/Widget.RatingBar">
       
          <item name="android:progressDrawable">@drawable/rating_bar_full</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
    </style>

</resources>
